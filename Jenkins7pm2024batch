node{
echo "Job Name is: ${env.JOB_NAME}"
echo "Node Name is: ${env.NODE_NAME}"
properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([pollSCM('* * * * *')])])
def mavenHome=tool name: 'maven3.9.6'
//Get the code from GitHub Server
stage('CheckoutCode'){
git branch: 'development', credentialsId: 'd0c8478c-d20f-4ceb-a642-61d8aa265482', url: 'https://github.com/wst-devteam/maven-web-application.git'
}
//Do the build by using Maven Build Tool
stage('Build'){
//Get the variable Value
sh "${mavenHome}/bin/mvn clean package"
}
//Execute the SonarQube Report
stage('ExecuteSonarQubeReport'){
sh "${mavenHome}/bin/mvn clean sonar:sonar"
}
//Upload Artifact into Artifact Repository
stage('UploadArtifactsintoNexus'){
sh "${mavenHome}/bin/mvn deploy"
}
//Deploy Application into Tomcat Server
stage('DeployApplicationIntoTomcatServer') {
deploy adapters: [tomcat9(credentialsId: 'a34e1a0b-6590-4980-b8c2-69a437db803c', path: '', url: 'http://192.168.157.143:9980/')], contextPath: '/maven-web-application', war: '**/*.war'
}
}
